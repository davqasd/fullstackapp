default: &default
  adapter: postgis
  encoding: unicode
  pool: 10
  timeout: 5000
  port: <%= ENV['DB_PORT'] || 5432 %>
  database: <%= ENV['POSTGRES_DB'] %>
  username: <%= ENV['POSTGRES_USER'] %>
  password: <%= ENV['POSTGRES_PASSWORD'] %>
  host: <%= ENV['DB_HOST'] %>
  min_messages: warning
  prepared_statements: false
  variables:
    statement_timeout: 5000

development:
  <<: *default

test:
  <<: *default

production:
  <<: *default
